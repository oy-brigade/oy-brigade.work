{
  "functions": {
    "source": "dist"
  },
  "hosting": {
    "public": "dist/public",
    "ignore": [
      "**/node_modules/**",
      "firebase.json"
    ],
    "rewrites": [
      { "source": "**", "function": "next" }
    ],
    "redirects": [
      { "source": "/otohame-kari", "destination": "https://oy-brigade.github.io/otohame-kari", "type": 302 },
      { "source": "/otohame-kari/*", "destination": "https://oy-brigade.github.io/otohame-kari", "type": 302 }
    ]
  }
}
