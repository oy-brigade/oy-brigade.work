.m-home-work
  padding 0 24px
  border 2px solid #445
  border-radius 4px

  & + .m-home-work
    margin-top 24px

  &__images
    display flex
    height 200px
    margin: 24px 0
    flex-direction column
    flex-wrap wrap
    justify-content space-between

    &:empty::before
      content '画像準備中'

    & > div
      position relative
      width calc(100% / 2 - 10px)
      max-width 100%
      height calc(50% - 5px)
      max-height 50%
      border-radius 6px
      box-sizing border-box
      overflow hidden
      background-color $green
      cursor pointer
      transition padding 0.5s $bezier
      box-shadow 1px 1px 4px rgba(0, 0, 0, 50%)

      &:first-child
        height 100%
        max-height 100%

      &:nth-child(2):last-child
        height 100%
        max-height 100%

      & > img
        border-radius 5px

      &:hover
        padding 8px

      .is-ie & > img
        position absolute
        width auto
        height auto
        max-height inherit
        min-height 100%
        min-width 100%
        left 50%
        top 50%
        transform: translate(-50%, -50%)

      .is-not-ie & > img
        width 100%
        height 100%
        object-fit cover

  &__info
    display flex
    padding 24px 0
    justify-content space-between
    align-items flex-end
    border-top: 1px solid #445

  &__title
    line-height 1
    font-size 24px

  &__date
    line-height 1
    font-size 14px
