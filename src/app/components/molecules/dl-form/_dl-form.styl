.m-dl-form
  display flex
  height 100px
  font-family 'Sawarabi Gothic', sans-serif;

  &__input-container
    height 100%
    flex 1 1 auto
    padding 0 24px
    border-width 6px 3px 6px 6px
    border-color $green
    border-style solid
    border-radius 12px 0 0 12px
    box-sizing border-box
    overflow hidden

    & > input
      display block
      width 100%
      height 100%
      border 0
      outline 0
      appearance none
      font-size 24px

  &__button-container
    display block
    height 100%
    margin 0
    border-width 6px 6px 6px 3px
    border-color $green
    border-style solid
    border-radius 0 12px 12px 0
    box-sizing border-box
    flex 0 0 200px
    overflow hidden

    & > button
      display block
      width 100%
      height 100%
      border 0
      outline 0
      appearance none
      background-color transparent
      font-size 20px
      font-weight bolder
      color #666
      cursor pointer

      &:hover
        color $green

      &:active
        background-color $green
        color white
