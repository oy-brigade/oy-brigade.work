.o-works-main-visual
  position relative
  width 100%
  height 75vh
  font-family 'Sawarabi Gothic', sans-serif

  &__hero
    position absolute
    width 100%
    height 100%
    left 0
    top 0
    background-size 105% 105% cover
    background-position center

    &::before
      content ''
      position absolute
      width 100%
      height 100%
      left 0
      top 0
      background-color white
      opacity 0.8

  &__logo
    position absolute
    width 40vw
    left 8vw
    bottom 18vh


  &__text
    position absolute
    left 8vw
    bottom 5vh

    & > h1
      font-size 60px
      font-weight bolder

    & > p
      margin-top 1.5vh
      font-size 14px
