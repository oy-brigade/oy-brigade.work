.o-main-visual
  position relative
  width 100%
  height 100vh
  min-height 600px
  margin-bottom 100px
  border-top 10px solid $green
  box-shadow 0 3px 24px rgba(0, 0, 0, 0.15)

  &__logo-wrapper
    position absolute
    width 400px
    height 400px
    left calc(50% - 200px + 100px)
    top calc(50% - 200px)
    z-index 1

  &__logo
    width 100%
    height 100%

@media screen and (max-width: 864px)
  .o-main-visual
    display flex
    justify-content center
    align-items center

    &__logo-wrapper
      position relative
      width 50vw
      height 50vw
      left 0
      top 0
